<div class="max-w-3xl mx-auto px-4 py-8">
  <%= render "deploy_assist/shared/header" %>
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">AWS Deployment Setup - Step 2 of 4</h1>
    <p class="mt-2 text-gray-600">AWS Credentials</p>
    <div class="mt-4 w-full bg-gray-200 rounded-full h-2">
      <div class="bg-blue-600 h-2 rounded-full" style="width: 50%"></div>
    </div>
  </div>

  <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm text-yellow-700">
          <strong>Security Note:</strong> These credentials will be encrypted and stored securely. They're needed to create AWS resources on your behalf. We recommend creating a dedicated IAM user with limited permissions.
        </p>
      </div>
    </div>
  </div>

  <%= form_with url: deploy_assist.wizards_aws_deployment_step_path(config_id: @service_configuration.id, step_number: 2),
                method: :post,
                local: true,
                class: "space-y-6" do |form| %>

    <div class="bg-white shadow rounded-lg p-6 space-y-6">
      <div>
        <%= form.label :access_key_id, "AWS Access Key ID", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field "aws_credentials[access_key_id]",
                           value: @step_data['access_key_id'],
                           required: true,
                           placeholder: "AKIA...",
                           class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 font-mono" %>
      </div>

      <div>
        <%= form.label :secret_access_key, "AWS Secret Access Key", class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field "aws_credentials[secret_access_key]",
                                value: @step_data['secret_access_key'],
                                required: true,
                                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 font-mono" %>
      </div>

      <div>
        <%= form.label :region, "AWS Region", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select "aws_credentials[region]",
                       options_for_select(DeployAssist.aws_regions.map { |r| [r.upcase, r] }, @step_data['region'] || DeployAssist.default_region),
                       {},
                       class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        <p class="mt-1 text-sm text-gray-500">Choose the region closest to your users</p>
      </div>

      <div class="bg-blue-50 rounded-lg p-4">
        <h3 class="text-sm font-medium text-blue-900 mb-2">How to get AWS credentials:</h3>
        <ol class="list-decimal list-inside text-sm text-blue-700 space-y-1">
          <li>Go to AWS Console → IAM → Users</li>
          <li>Create a new user or select existing user</li>
          <li>Create access keys for CLI/API access</li>
          <li>Copy the Access Key ID and Secret Access Key</li>
        </ol>
        <a href="https://console.aws.amazon.com/iam/home#/users" target="_blank" class="mt-2 inline-block text-sm text-blue-600 hover:text-blue-800">
          Open AWS IAM Console →
        </a>
      </div>
    </div>

    <!-- Navigation Buttons -->
    <div class="flex justify-between items-center">
      <%= link_to "Cancel", deploy_assist.root_path, class: "text-gray-600 hover:text-gray-900 font-medium" %>
      <div class="flex gap-3">
        <%= link_to deploy_assist.wizards_aws_deployment_step_path(config_id: @service_configuration.id, step_number: 1), class: "px-6 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg transition-colors" do %>
          ← Previous
        <% end %>
        <%= button_tag type: "submit", class: "px-6 py-2 bg-[var(--color-accent-500)] hover:bg-[var(--color-accent-600)] text-white font-medium rounded-lg transition-colors" do %>
          Continue →
        <% end %>
      </div>
    </div>
  <% end %>
</div>
