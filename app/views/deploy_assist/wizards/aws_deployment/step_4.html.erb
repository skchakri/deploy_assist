<% collected = @service_configuration.collected_data %>

<div class="max-w-3xl mx-auto px-4 py-8">
  <%= render "deploy_assist/shared/header" %>
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">AWS Deployment Setup - Step 4 of 4</h1>
    <p class="mt-2 text-gray-600">Review & Confirm</p>
    <div class="mt-4 w-full bg-gray-200 rounded-full h-2">
      <div class="bg-blue-600 h-2 rounded-full" style="width: 100%"></div>
    </div>
  </div>

  <div class="space-y-6">
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Business Information</h2>
      <dl class="grid grid-cols-1 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Company Name</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= collected['company_name'] %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Contact Email</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= collected['contact_email'] %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Docker Username</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= collected['docker_username'] %></dd>
        </div>
      </dl>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">AWS Configuration</h2>
      <dl class="grid grid-cols-1 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Region</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= collected['region']&.upcase || DeployAssist.default_region.upcase %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Access Key ID</dt>
          <dd class="mt-1 text-sm text-gray-900 font-mono"><%= collected['access_key_id']&.first(12) %>...</dd>
        </div>
      </dl>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Infrastructure</h2>
      <dl class="grid grid-cols-1 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Database Instance</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= collected['db_instance_class'] || 'db.t3.small' %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Storage Size</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= collected['storage_gb'] || '20' %> GB</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Multi-AZ</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= collected['multi_az'] == 'true' ? 'Enabled' : 'Disabled' %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">S3 Bucket</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= collected['create_s3_bucket'] != 'false' ? 'Will be created' : 'Skip' %>
          </dd>
        </div>
      </dl>
    </div>

    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">What will happen next:</h3>
          <div class="mt-2 text-sm text-yellow-700">
            <ol class="list-decimal list-inside space-y-1">
              <li>Create IAM user with deployment permissions</li>
              <% if collected['create_s3_bucket'] != 'false' %>
                <li>Create S3 bucket with versioning and CORS</li>
              <% end %>
              <li>Create RDS PostgreSQL instance (<%= collected['db_instance_class'] || 'db.t3.small' %>)</li>
              <li>Generate Kamal deployment configuration</li>
              <li>Generate database.yml and credentials templates</li>
            </ol>
          </div>
        </div>
      </div>
    </div>

    <%= form_with url: deploy_assist.wizards_aws_deployment_step_path(config_id: @service_configuration.id, step_number: 4),
                  method: :post,
                  local: true do |form| %>
      <%= form.hidden_field :confirm, value: 'true' %>

      <!-- Navigation Buttons -->
      <div class="flex justify-between items-center">
        <%= link_to "Cancel", deploy_assist.root_path, class: "text-gray-600 hover:text-gray-900 font-medium" %>
        <div class="flex gap-3">
          <%= link_to deploy_assist.wizards_aws_deployment_step_path(config_id: @service_configuration.id, step_number: 3), class: "px-6 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg transition-colors" do %>
            ‚Üê Previous
          <% end %>
          <%= button_tag type: "submit", class: "px-6 py-2 bg-[var(--color-accent-500)] hover:bg-[var(--color-accent-600)] text-white font-medium rounded-lg transition-colors" do %>
            Complete Setup
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
