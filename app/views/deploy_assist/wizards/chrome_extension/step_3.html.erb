<div class="max-w-3xl mx-auto py-8">
  <%= render "deploy_assist/shared/header" %>
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Chrome Extension Setup</h1>
    <p class="text-gray-600">Step 3 of 4: Privacy & Compliance</p>

    <!-- Progress bar -->
    <div class="mt-4 w-full bg-gray-200 rounded-full h-2">
      <div class="bg-blue-600 h-2 rounded-full" style="width: 75%"></div>
    </div>
  </div>

  <%= form_with url: deploy_assist.wizards_chrome_extension_step_path(config_id: @service_configuration.id, step_number: 3),
                method: :patch,
                local: true do |f| %>

    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Privacy Policy & Compliance</h2>
      <p class="text-sm text-gray-600 mb-6">
        Chrome Web Store requires transparency about data collection and usage.
      </p>

      <div class="space-y-5">
        <%= fields_for :privacy_compliance do |pc| %>

          <!-- Privacy Policy URL -->
          <div>
            <%= pc.label :privacy_policy_url, "Privacy Policy URL", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= pc.url_field :privacy_policy_url,
                value: @step_data[:privacy_policy_url] || "https://#{@service_configuration.deployment_setup.domain}/privacy",
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "https://yourapp.com/privacy",
                required: true %>
            <p class="mt-1 text-xs text-gray-500">Required if your extension collects any user data. Must be publicly accessible.</p>
          </div>

          <!-- Homepage URL -->
          <div>
            <%= pc.label :homepage_url, "Extension Homepage", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= pc.url_field :homepage_url,
                value: @step_data[:homepage_url] || "https://#{@service_configuration.deployment_setup.domain}",
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "https://yourapp.com" %>
            <p class="mt-1 text-xs text-gray-500">Landing page for your extension</p>
          </div>

          <!-- Support Email -->
          <div>
            <%= pc.label :support_email, "Support Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= pc.email_field :support_email,
                value: @step_data[:support_email] || "support@#{@service_configuration.deployment_setup.domain}",
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "support@yourapp.com",
                required: true %>
            <p class="mt-1 text-xs text-gray-500">Users will contact you here for support</p>
          </div>

          <!-- Single Purpose Description -->
          <div>
            <%= pc.label :single_purpose_description, "Single Purpose Statement", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= pc.text_area :single_purpose_description,
                value: @step_data[:single_purpose_description],
                rows: 3,
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "This extension helps users [specific task] by [how it works]. It does not collect personal data.",
                required: true,
                maxlength: 280 %>
            <p class="mt-1 text-xs text-gray-500">Clearly state your extension's single, primary purpose (max 280 chars)</p>
          </div>

          <!-- Permissions Justification -->
          <div>
            <%= pc.label :permissions_justification, "Permissions Justification", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= pc.text_area :permissions_justification,
                value: @step_data[:permissions_justification],
                rows: 5,
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "Explain why each requested permission is necessary for your extension's core functionality...",
                required: true %>
            <p class="mt-1 text-xs text-gray-500">Justify each permission you requested in Step 1. Be specific and detailed.</p>
          </div>

        <% end %>
      </div>
    </div>

    <!-- Privacy Policy Guidelines -->
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Privacy Policy Requirements</h3>
          <div class="mt-2 text-sm text-yellow-700">
            <p class="font-medium mb-1">Your privacy policy must include:</p>
            <ul class="ml-4 list-disc space-y-1">
              <li>What data is collected (if any)</li>
              <li>How the data is used</li>
              <li>How the data is stored and protected</li>
              <li>If data is shared with third parties</li>
              <li>How users can request data deletion</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Single Purpose Examples -->
    <div class="bg-gradient-to-r from-green-50 to-teal-50 border border-green-200 rounded-lg p-5 mb-6">
      <h3 class="text-sm font-semibold text-green-900 mb-3">✅ Good Single Purpose Examples</h3>
      <div class="space-y-2 text-sm text-green-800">
        <div class="bg-white rounded p-3">
          <p class="font-medium mb-1">Screenshot Tool:</p>
          <p class="text-xs">"Capture and annotate screenshots of web pages. Saves screenshots locally to your device."</p>
        </div>
        <div class="bg-white rounded p-3">
          <p class="font-medium mb-1">Password Manager:</p>
          <p class="text-xs">"Securely store and autofill passwords for websites. Uses encrypted local storage."</p>
        </div>
        <div class="bg-white rounded p-3">
          <p class="font-medium mb-1">Grammar Checker:</p>
          <p class="text-xs">"Check spelling and grammar in text inputs across websites. Processes text locally."</p>
        </div>
      </div>
    </div>

    <!-- Compliance Checklist -->
    <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">Chrome Web Store Program Policies</h3>
          <div class="mt-2 text-sm text-blue-700">
            <p>Ensure your extension complies with:</p>
            <ul class="mt-1 ml-4 list-disc">
              <li>Does not include deceptive installation tactics</li>
              <li>Does not spam users with unwanted notifications</li>
              <li>Does not interfere with browser functionality</li>
              <li>Does not collect data without user consent</li>
              <li>Does not include malicious code or ads</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Navigation Buttons -->
    <div class="flex justify-between items-center">
      <%= link_to "Cancel", deploy_assist.root_path, class: "text-gray-600 hover:text-gray-900 font-medium" %>
      <div class="flex gap-3">
        <%= link_to deploy_assist.wizards_chrome_extension_step_path(config_id: @service_configuration.id, step_number: 2), class: "px-6 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg transition-colors" do %>
          ← Previous
        <% end %>
        <%= button_tag type: "submit", class: "px-6 py-2 bg-[var(--color-accent-500)] hover:bg-[var(--color-accent-600)] text-white font-medium rounded-lg transition-colors" do %>
          Continue →
        <% end %>
      </div>
    </div>

  <% end %>
</div>
