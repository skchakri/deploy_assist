<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%= render "deploy_assist/shared/header" %>
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Google OAuth Setup - Step 1 of 4</h1>
    <p class="mt-2 text-gray-600">Project Information</p>
  </div>

  <%= form_with url: deploy_assist.wizards_google_oauth_step_path(step_number: 1, config_id: params[:config_id]), method: :patch, local: true do |f| %>
    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
      <div class="space-y-6">
        <!-- Application Name -->
        <div>
          <%= label_tag :application_name, "Application Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= text_field_tag 'project_info[application_name]', @service_configuration&.collected_data&.dig('application_name'),
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "prof-vault",
              required: true %>
          <p class="mt-1 text-sm text-gray-500">This will be shown to users during OAuth consent</p>
        </div>

        <!-- User Support Email -->
        <div>
          <%= label_tag :user_support_email, "User Support Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= email_field_tag 'project_info[user_support_email]', @service_configuration&.collected_data&.dig('user_support_email'),
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "skchakri@gmail.com",
              required: true %>
          <p class="mt-1 text-sm text-gray-500">Email address users can contact for support</p>
        </div>

        <!-- Developer Contact Email -->
        <div>
          <%= label_tag :developer_contact_email, "Developer Contact Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= email_field_tag 'project_info[developer_contact_email]', @service_configuration&.collected_data&.dig('developer_contact_email'),
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "skchakri@gmail.com",
              required: true %>
          <p class="mt-1 text-sm text-gray-500">Google will contact you at this email for verification</p>
        </div>
      </div>
    </div>

    <!-- Info Box -->
    <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">What you'll need:</h3>
          <div class="mt-2 text-sm text-blue-700">
            <ul class="list-disc list-inside space-y-1">
              <li>A Google Cloud account (free to create)</li>
              <li>Privacy Policy URL (we'll help you create one if needed)</li>
              <li>Your app's domain name</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Navigation Buttons -->
    <div class="flex justify-between items-center">
      <%= link_to "Cancel", deploy_assist.root_path, class: "text-gray-600 hover:text-gray-900 font-medium" %>
      <div class="flex gap-3">
        <button type="button" disabled class="px-6 py-2 bg-gray-300 text-gray-500 font-medium rounded-lg cursor-not-allowed">
          ← Previous
        </button>
        <%= button_tag type: "submit", class: "px-6 py-2 bg-[var(--color-accent-500)] hover:bg-[var(--color-accent-600)] text-white font-medium rounded-lg transition-colors" do %>
          Continue →
        <% end %>
      </div>
    </div>
  <% end %>
</div>
