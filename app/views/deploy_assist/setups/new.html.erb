<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%= render "deploy_assist/shared/header" %>
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Create Deployment Setup</h1>
    <p class="mt-2 text-gray-600">Set up deployment configuration for your application</p>
  </div>

  <%= form_with model: @deployment_setup, url: deploy_assist.setups_path, local: true do |f| %>
    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
      <div class="space-y-5">
        <!-- App Name -->
        <div>
          <%= f.label :app_name, "Application Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :app_name,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "my-rails-app",
              required: true,
              value: Rails.application.class.module_parent_name.underscore.dasherize %>
          <p class="mt-1 text-xs text-gray-500">Used for naming resources (e.g., S3 buckets, Docker images)</p>
        </div>

        <!-- Environment -->
        <div>
          <%= f.label :environment, "Environment", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :environment,
              options_for_select([
                ['Production', 'production'],
                ['Staging', 'staging'],
                ['Development', 'development']
              ], 'production'),
              {},
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              required: true %>
        </div>

        <!-- Domain -->
        <div>
          <%= f.label :domain, "Domain (Optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :domain,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "example.com" %>
          <p class="mt-1 text-xs text-gray-500">Your application's domain name</p>
        </div>

        <!-- Region -->
        <div>
          <%= f.label :region, "AWS Region", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :region,
              options_for_select([
                ['US East (N. Virginia) - us-east-1', 'us-east-1'],
                ['US West (Oregon) - us-west-2', 'us-west-2'],
                ['Europe (Ireland) - eu-west-1', 'eu-west-1'],
                ['Europe (Frankfurt) - eu-central-1', 'eu-central-1'],
                ['Asia Pacific (Singapore) - ap-southeast-1', 'ap-southeast-1'],
                ['Asia Pacific (Tokyo) - ap-northeast-1', 'ap-northeast-1'],
                ['Asia Pacific (Mumbai) - ap-south-1', 'ap-south-1']
              ], 'us-east-1'),
              {},
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
      </div>
    </div>

    <!-- Info Box -->
    <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">What's Next?</h3>
          <div class="mt-2 text-sm text-blue-700">
            <p>After creating your deployment setup, you can configure individual services like AWS Deployment, Google OAuth, AWS SES, and Stripe.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="mt-6 flex justify-between items-center gap-4">
      <%= link_to "â† Back to Dashboard", deploy_assist.root_path, class: "text-gray-600 hover:text-gray-900 font-medium" %>
      <button type="submit" class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-[var(--color-accent-500)] hover:bg-[var(--color-accent-600)] shadow-lg shadow-[var(--color-accent-500)]/30 hover:shadow-xl transition-all duration-200">
        Create Setup
      </button>
    </div>
  <% end %>
</div>
